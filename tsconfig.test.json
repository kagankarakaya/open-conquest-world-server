{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es2017",
    "outDir": "./dist",
    "lib": ["es6"],
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots" : ["./node_modules/@types"],
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "exclude": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "include": [
    "test/*.ts",
    "test/**/*.ts",
    "test/**/*.js",
    "config/*.*"
  ]
}